{
  "compilerOptions": {
    "pretty": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "es6",
    "checkJs": false,
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es2017"
    ],
    "outDir": "./lib",
    "allowJs": false,
    "noEmitOnError": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "./src"
  ]
}
